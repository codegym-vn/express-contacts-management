extends layout

block content
    h1  Edit contact
    .row
        .col-md-6.col-md-offset-3
            form(method="post")
                .form-group
                    label Name
                    input(name="name", value="#{contact.name}").form-control
                .form-group
                    label Phone
                    input(name="phone", value="#{contact.phone}").form-control
                .form-group
                    label Email
                    input(name="email", value="#{contact.email}").form-control
                .form-group
                    input(type="submit", value="Update").form-control.btn.btn-success