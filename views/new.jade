extends layout

block content
    h1 Create new contact
    .row
        .col-md-6.col-md-offset-3
            form(method="post")
                .form-group
                    label Name
                    input(name="name").form-control
                .form-group
                    label Phone
                    input(name="phone").form-control
                .form-group
                    label Email
                    input(name="email").form-control
                .form-group
                    input(type="submit", value="Create").form-control.btn.btn-success